{
  "name": "vibecopy",
  "displayName": "VibeCopy",
  "description": "copy multiple files to context, for a faster proompting and vibe-coding experience. select files in sidebar, right click, and get the ready with path!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "main": "./dist/node/extension.js",
  "publisher": "aarmn",
  "repository": {
    "type": "git",
    "url": "https://github.com/aarmn/vibecopy.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "vibecopy.openSelectedAsMarkdown",
        "title": "VibeCopy: Open Selected as Markdown",
        "category": "VibeCopy"
      },
      {
        "command": "vibecopy.copySelectedAsMarkdown",
        "title": "VibeCopy: Copy Selected as Markdown",
        "category": "VibeCopy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vibecopy.openSelectedAsMarkdown",
          "group": "navigation@5"
        },
        {
          "command": "vibecopy.copySelectedAsMarkdown",
          "when": "!isWeb",
          "group": "navigation@5"
        }
      ]
    }
  },
  "scripts": {
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile:web": "echo 'Running full compile...' && pnpm run compile",
    "compile:node": "echo 'Running full compile...' && pnpm run compile",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package:web": "echo 'Running full package...' && pnpm run package",
    "package:node": "echo 'Running full package...' && pnpm run package",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "pnpm run compile",
    "vscode:prepublish": "pnpm run package",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "run-desktop-debug": "echo '>>> To debug the Desktop version: Ensure you ran `pnpm compile` first, then press F5 in VS Code. <<<'"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vscode/test-web": "^0.0.68",
    "assert": "^2.1.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}